@model ZCaixaV5.Models.Usuario


@{
    ViewData["Title"] = "Login";
}

<body>
    <main>
        <div class="login-area">

            
            <div class="Login-box">
                <div class="logo-login-area">
                    <a asp-controller="Usuarios" asp-action="Login"><img src="~/imagens/logo-horizontal.png" alt=""></a>
                    <p class="text-area-logo">Insira suas credenciais de acesso abaixo.</p>
                </div>

                <div class="login-entrar-area">
                    <form  asp-action="Login" class="entrada-dados-login">
                        <div asp-validation-summary="ModelOnly"></div>

                        
                            <p>E-mail, usuário ou telefone</p>
                            <input asp-for="Username">
                            
                        
                            
                                <p>Senha</p>
                              
                                    <input asp-for="Senha" type="password">
                                
                                
                                    <h3 class="text-danger"> @ViewBag.Saudar @ViewBag.Message @ViewBag.Message1 </h3>

                            <span class="area-botao-final">
                                <input type="submit" value="Entrar" class="entrar-btn-login">
                                <a asp-controller="Usuarios" asp-action="RecuperaSenha"><p>Esqueci minha senha</p></a>
                                <a asp-controller="Usuarios" asp-action="Create"><p>Criar um cadastro</p></a>
                            </span>

                        
                    </form>

                </div>
            </div>
        </div>
    </main>
</body>



