@model ZCaixaV5.Models.CodigoSeguranca

@{
    ViewData["Title"] = "Alterar a Senha";
}
<body>
    <main>
        <div class="login-area">

            <div class="recupera-box-area">


                <div class="cabeçalho-cadastro">
                    <a class="cabeçalho-cadastr-db1" asp-action="Login">
                        <img class="logo-cadastro" src="~/imagens/logo-horizontal.png" alt="">
                    </a>
                    <div class="cabeçalho-cadastr-db2">
                        <h1>Alterar Senha</h1>
                    </div>
                </div>

                <div class="main-recuperacao-area">
                    <p class="textos-informativos">Digite a nova senha do seu usuário </p>
                    <form asp-action="AlteraSenha" class="">
                        <input asp-for="Senha" type="password">
                        <span asp-validation-for="Senha" class="text-danger"></span>
                        
                        <h3 class="text-danger">@ViewBag.Message</h3>
                    
                        <div class="btn-cadastro-area">
                            <input type="submit" class="btn-cadastro-area">
                        </div>

                        </form>
    
                </div>

            </div>
        </div>
    </main>
</body>