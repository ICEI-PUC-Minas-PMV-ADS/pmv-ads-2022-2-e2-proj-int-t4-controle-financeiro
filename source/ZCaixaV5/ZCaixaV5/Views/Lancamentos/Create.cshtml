@model ZCaixaV5.Models.Lancamento

@{
    ViewData["Title"] = "Create";
}

<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content modal-lancamento">
       @using (Html.BeginForm())
       {
        <div class="modal-header">
            <h1 class="modal-title" id="staticBackdropLabel">Adicionar um Lançamento</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        @Html.AntiForgeryToken()
        <div class="modal-body">

            <form asp-action="Create" class="formulario-lancamento">

                <div class="campos-insere-lan-row">

                    <div class="">
                        <p>Data</p>
                        <input class="formulario-lancamento-input" asp-for="Data" type="date" value="today">
                        <span asp-validation-for="Data" class="text-danger"></span>
                    </div>
                    <div>
                        <p>Categoria</p>
                        @Html.DropDownList("Categ", String.Empty)
                    </div>

                    <span asp-validation-for="CatId" class="text-danger"></span>
                </div>

                <div class="campos-insere-lan-row">
                    <div class="valor-area">
                        <p>Valor</p>
                        <input class="formulario-lancamento-input campo-valor" asp-for="Valor" type="money" />
                        <span asp-validation-for="Valor" class="text-danger"></span>
                    </div>

                    <div class="form-group">

                        <div class="campo-tipo">
                            <p>Tipo</p>
                            @* Passando o Nome da ViewBag *@
                            @Html.DropDownList("TipoLanId", String.Empty)
                        </div>

                        <h3 class="text-danger"> @ViewData["Message"] </h3>
                        <span asp-validation-for="Tipo" class="text-danger"></span>
                    </div>
                </div>
                <div class="">
                    <p>Descrição</p>
                    <input asp-for="Descricao" class="formulario-lancamento-input" />
                    <span asp-validation-for="Descricao" class="text-danger campo-descricao"></span>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </form>
        </div>
       }
    </div> <!-- /.modal-content -->
</div> <!-- /.modal-dialog -->
<div>
    @Html.ActionLink("Retornar para a lista", "Index")
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

